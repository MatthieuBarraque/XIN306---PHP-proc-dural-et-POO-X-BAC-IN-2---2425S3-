{% extends 'layout.html.twig' %}

{% block content %}
<div class="register-container">
    <a href="{{ path('login') }}" class="back-btn"><i class="fas fa-arrow-left"></i></a>

    <div class="register-box">
        <i class="fas fa-key logo"></i>
        <h1>Réinitialiser le mot de passe</h1>
        
        {% if error %}
            <div class="error-message">
                <i class="fas fa-exclamation-triangle"></i> {{ error }}
            </div>
        {% endif %}
        
        {% if success %}
            <div class="success-message">
                <i class="fas fa-check-circle"></i> {{ success }}
            </div>
        {% endif %}

        {% if token and user_id and not error %}
            <form action="{{ path('handle_reset_password') }}" method="post">
                <div class="form-group">
                    <label for="password">Nouveau mot de passe</label>
                    <input type="password" id="password" name="password" placeholder="Nouveau mot de passe" required>
                </div>

                <div class="form-group">
                    <label for="confirm_password">Confirmer le mot de passe</label>
                    <input type="password" id="confirm_password" name="confirm_password" placeholder="Confirmer le mot de passe" required>
                </div>

                <input type="hidden" name="token" value="{{ token }}">
                <input type="hidden" name="user_id" value="{{ user_id }}">
                <button type="submit">Réinitialiser le mot de passe</button>
            </form>
        {% endif %}
    </div>
</div>

<script>
    function toggleEditForm(messageId) {
        const editForm = document.getElementById('edit-form-' + messageId);
        const messageContent = document.getElementById('content-' + messageId);
        if (editForm.style.display === 'none') {
            editForm.style.display = 'block';
            messageContent.style.display = 'none';
        } else {
            editForm.style.display = 'none';
            messageContent.style.display = 'block';
        }
    }
</script>
{% endblock %}

